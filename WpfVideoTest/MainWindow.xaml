<Window x:Class="WpfVideoTest.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
		xmlns:local="clr-namespace:WpfVideoTest"
		Title="WPF Video Test"
		Width="600" Height="300" SizeToContent="Height">
	<StackPanel>
		<Button Content="Browse" Width="180"
				Click="Browse_Click"/>
		<Grid Width="180" Height="120" HorizontalAlignment="Center"
			  Background="Green">
			<Image x:Name="TargetThumbnailImage"
				   Width="180" Height="120"/>
		</Grid>
		<Grid MinWidth="180" MinHeight="120" HorizontalAlignment="Center"
			  Margin="0,8,0,0"
			  Background="Green">
			<Image x:Name="TargetPreviewImage"/>
			<local:VideoBox x:Name="TargetVideoBox"/>
		</Grid>
	</StackPanel>
</Window>
